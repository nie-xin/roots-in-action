.nav-top
  nav($size: 10, $bg-color: $white)
  box-shadow: 0 0 4px $silver
  width: 100%

  .nav-menu
    position: absolute
    display: block
    float: left
    width: 20%

    ul
      width: 100%
      box-sizing: border-box

      & :first-child
        margin-bottom: 1em

    li
      float: none
      font-size: .8em

    .nav-item
      color: $black

    &.off
      left: -20%

