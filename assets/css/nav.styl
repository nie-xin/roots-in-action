.nav-top
  nav($size: 20, $bg-color: $white)
  box-shadow: 0 0 4px $silver
  width: 100%

ul.nav-menu
  width: 75%
  float: left
  font-size: .5em
  padding: 0
  // margin-top: 3em
  margin-left: 25%

  .nav-tab
    color: #555
    bold()
    margin-right: 15%
    font-family: $verdana

    &:link
      text-decoration: none

    &:hover
      color: lighten(#555, 30%)

  .nav-tab.active
    color: $teal


.introduction
  float: left
  margin-left: .7em
  margin-top: .7em

.introduction .name
  font-size: .5em
  bold()

.introduction .description
  font-size: .4em
  margin: 0

.img.round
  rounded()

.img.thumbnail
  float: left
  vertically-align()
  margin-left: .1em
